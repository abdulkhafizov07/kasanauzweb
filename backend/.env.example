# Security
DJANGO_SECRET_KEY=replace_with_strong_secret
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=kasana.mehnat.uz

# Database
POSTGRES_DB=kasana
POSTGRES_USER=kasana_user
POSTGRES_PASSWORD=supersecret
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0

# CORS
DJANGO_CORS_ALLOWED_ORIGINS=https://kasana.mehnat.uz,http://localhost:5173

# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# OneID
ONE_ID_CLIENT_ID=
ONE_ID_CLIENT_SECRET=

# MinIO
MINIO_STORAGE_ENDPOINT=minio:9000
MINIO_STORAGE_ACCESS_KEY=files
MINIO_STORAGE_SECRET_KEY=changeme
MINIO_STORAGE_USE_HTTPS=false
MINIO_STORAGE_MEDIA_BUCKET_NAME=local-media
MINIO_STORAGE_STATIC_BUCKET_NAME=local-static
MINIO_STORAGE_MEDIA_URL=/media/

# AWS S3 (optional if not using MinIO)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_ENDPOINT_URL=
AWS_S3_USE_SSL=true

# Clickhouse
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_DB=kasana_logs
CLICKHOUSE_USER=kasana_db
CLICKHOUSE_PASSWORD=supersecret
